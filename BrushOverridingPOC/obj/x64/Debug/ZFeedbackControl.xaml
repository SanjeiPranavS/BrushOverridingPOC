<UserControl
    x:Class="BrushOverridingPOC.ZFeedbackControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BrushOverridingPOC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.Resources>
        <StaticResource x:Key="ZFeedbackForegroundBrush" ResourceKey="SystemControlForegroundBaseHighBrush" />
    </UserControl.Resources>

    <Grid>
        <TextBlock
            FontSize="42"
            Foreground="{ThemeResource ZFeedbackForegroundBrush}"
            Text="Hello 2" />
    </Grid>
</UserControl>

